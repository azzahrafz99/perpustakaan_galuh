<% content_for :breadcrumb do %>
  <div class="col-12 no-padding">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item" aria-current="page">
          <%= link_to root_path, target: "_top" do %>
            <span>Dashboard</span>
          <% end %>
        </li>

        <li class="breadcrumb-item active" aria-current="page">
          <%= link_to books_path, target: "_top" do %>
            <span>Books</span>
          <% end %>
        </li>

        <li class="breadcrumb-item active" aria-current="page">
          <%= link_to book_path(@book), target: "_top" do %>
            <span>Book Details</span>
          <% end %>
        </li>

        <li class="breadcrumb-item active" aria-current="page">
          <span>Edit Book</span>
        </li>
      </ol>
    </nav>
  </div>
<% end %>

<div class="card card__custom mb-4">
  <div class="card-header">
    <div class="row">
      <div class="col-6">
        <h4>Edit Book</h4>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-6">
        <%= form_for @book, url: book_path(@book), method: :patch do |f| %>
          <%= render 'form', book: @book, f: f %>
        <% end %>
      </div>
    </div>
  </div>
</div>
