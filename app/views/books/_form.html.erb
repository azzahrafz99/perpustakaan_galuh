<div class="row">
  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :isbn, 'ISBN', required: true %>
    <%= f.text_field :isbn, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :title, required: true %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
</div>


<div class="form-group">
  <%= f.label :summary %>
  <%= f.text_area :summary, class: 'form-control', rows: 10 %>
</div>

<div class="row">
  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :author, required: true %>
    <%= f.text_field :author, class: 'form-control', required: true %>
  </div>

  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :publisher, required: true %>
    <%= f.text_field :publisher, class: 'form-control', required: true %>
  </div>
</div>

<div class="row">
  <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-6">
    <%= f.label :category_id, required: true %>
    <%= f.select :category_id, options_for_select(Category.all.collect{ |c| [c.name, c.id] }, selected: f.object&.category_id), { include_blank: 'Choose One' }, class: 'form-control' %>
  </div>

  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :language %>
    <%= f.text_field :language, class: 'form-control' %>
  </div>

  <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <%= f.label :stock %>
    <%= f.number_field :stock, class: 'form-control' %>
  </div>
</div>

<%= f.submit 'Save', class: 'btn btn-primary mt-5' %>
